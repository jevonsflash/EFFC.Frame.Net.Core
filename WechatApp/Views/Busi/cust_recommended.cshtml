@using EFFC.Frame.Net.Base.Data.Base
@{
    Layout = "~/Views/Layout/_layout_frame.cshtml";
    var selectvalues = ViewData["selectvalues"] == null ? new List<FrameDLRObject>() : (List<FrameDLRObject>)ViewData["selectvalues"];
}
@section js{
    <script src="~/scripts/bootstrap-select-1.12.4/js/bootstrap-select.min.js"></script>
    <script src="~/js/pages/busi/custbind.js"></script>
}
@section css{
    <link href="~/scripts/bootstrap-select-1.12.4/css/bootstrap-select.min.css" rel="stylesheet" />
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <label>所属门店</label>
        </div>
        <div class="col-md-10">
            <select class="selectpicker" id="storecode">
                @foreach (dynamic item in selectvalues)
                {
                    <option value="@item.codevalue">@item.codetext</option>

                }
            </select>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <label>推荐人电话号码：</label>
        </div>
        <div class="col-md-10">
            <input type="text" class="form-control" required="" autofocus="" maxlength="20" id="recommender" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <label>推荐人姓名：</label>
        </div>
        <div class="col-md-10">
            <input type="text" class="form-control" required="" autofocus="" maxlength="20" id="recommender_name" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <label>被推荐人电话号码：</label>
        </div>
        <div class="col-md-10">
            <input type="text" class="form-control" required="" id="recommended" maxlength="20" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-10">
            <div class="btn-group">
                <button class="btn btn-primary btn-large" id="save">提交</button><button class="btn btn-warning btn-large" id="cancel">取消</button>
            </div>
        </div>
    </div>
</div>


